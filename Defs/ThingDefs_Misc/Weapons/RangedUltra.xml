  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>CW_PlasmaGun</defName>
    <label>Plasma gun</label>
    <description>A heavy cybernetic weapon system. The coils of this monstrum are switched on and off in a precisely timed sequence, causing the micro explosion projectiles to be accelerated quickly along the barrel via magnetic forces. Designed to destroy light vehicles and aircraft with its superior firepower.</description>
    <graphicData>
      <texPath>Things/WeaponRanged/PlasmaGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.4</drawSize>
    </graphicData>
    <soundInteract>CW_PlasmaBoil</soundInteract>
    <generateCommonality>0.05</generateCommonality>
    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <researchPrerequisite>CW_FrameworkWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>13</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <statBases>
      <MarketValue>1750</MarketValue>
      <Flammability>0.25</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
      <Beauty>-1</Beauty>
      <EquipDelay>2</EquipDelay>
      <WorkToMake>50000</WorkToMake>
      <Mass>4.65</Mass>
      <AccuracyTouch>0.64</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.88</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>25</Plasteel>
      <Uranium>75</Uranium>
      <ComponentSpacer>8</ComponentSpacer>
    </costList>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    <weaponTags Inherit="False">
      <li>SpacerGun</li>
    </weaponTags>
    <verbs>
      <li Class="CyberneticWarfare.VerbPropertiesCW">
        <label>Melter</label>
        <verbClass>CyberneticWarfare.Verb_ShootCW</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PlasmaBurst</defaultProjectile>
        <warmupTime>4</warmupTime>
        <minRange>1.5</minRange>
        <range>35.9</range>
        <burstShotCount>6</burstShotCount>
        <forcedMissRadius>0.15</forcedMissRadius>
        <soundCast>CW_FuturisticWeapon</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
      <li Class="CyberneticWarfare.VerbPropertiesCW">
        <label>Blaster</label>
        <verbClass>CyberneticWarfare.Verb_ShootCW</verbClass>
        <rapidfire>true</rapidfire>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PlasmaBlast</defaultProjectile>
        <warmupTime>2.5</warmupTime>
        <minRange>1.5</minRange>
        <range>33.4</range>
        <burstShotCount>12</burstShotCount>
        <forcedMissRadius>0.3</forcedMissRadius>
        <soundCast>CW_BlasterShot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
      <li>Blunt</li>
      </capacities>
      <power>11</power>
      <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
      <li>Blunt</li>
      <li>Poke</li>
      </capacities>
      <power>9</power>
      <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <comps>
      <li>
        <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
      </li>
      <li Class="CyberneticWarfare.CompProperties_WargearWeaponToggle">
      </li>
    </comps>
    <thingCategories Inherit="False">
      <li>CW_CyborgWeaponry</li>
    </thingCategories>
  </ThingDef>

